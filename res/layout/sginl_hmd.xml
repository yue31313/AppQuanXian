       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="名字"
       />
   <EditText 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/haoma2"
    
    />
    <TextView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:text="内容"
       />
  <EditText 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/haoma3"
    
    />
  <Button 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/haoma4"
      android:text="修改资料"
